{
    "compilerOptions": {
      "target": "ES2020", // Specify the ECMAScript target version
      "module": "CommonJS", // Use CommonJS modules (Node.js default)
      "outDir": "./bin", // Output directory for compiled JS files
      "rootDir": "./src", // Source directory for TypeScript files
      "strict": true, // Enable all strict type-checking options
      "esModuleInterop": true, // Enable compatibility with ES modules
      "skipLibCheck": true, // Skip type checking of declaration files
      "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
      "moduleResolution": "node", // Use Node.js style module resolution
      "resolveJsonModule": true, // Allow importing JSON modules
      "noImplicitAny": true, // Disallow implicit 'any' types
      "noUnusedLocals": true, // Report errors on unused locals
      "noUnusedParameters": true, // Report errors on unused parameters
      "noFallthroughCasesInSwitch": true, // Report errors for fallthrough cases in switch statements
      "sourceMap": true // Generate source maps for debugging
    },
    "include": ["src/**/*", "vite.config.ts"], // Include all files in the src directory
    "exclude": ["node_modules", "dist"] // Exclude node_modules and dist directories
  }